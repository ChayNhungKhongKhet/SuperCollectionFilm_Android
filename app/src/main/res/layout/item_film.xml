<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">
        <ImageView
            android:id="@+id/banner_film"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/gradStart">
        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_film"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/card_view_image"
        android:text="Conan Detective"
        android:textSize="18sp" />

    <TextView

        android:id="@+id/release_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/title_film"
        android:text="20/12/2022"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/director"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_film"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/card_view_image"
        android:text="Director"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/runningTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/release_day"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/director"
        android:text="Time : 130m"
        android:textSize="16sp" />
</RelativeLayout>